<Window
    CanResize="False"
    Height="200"
    Icon="/Assets/avalonia-logo.ico"
    Padding="10"
    Title="Calculator"
    Width="800"
    WindowStartupLocation="CenterOwner"
    d:DesignHeight="200"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Calculator.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Calculator.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="*, 5, *" VerticalAlignment="Center">
        <StackPanel
            Grid.Column="0"
            Orientation="Vertical"
            Spacing="10">
            <TextBlock Text="First number" />
            <TextBox Text="{Binding Input}" />

            <TextBlock Text="Numeric system of first number (2-35)" />
            <NumericUpDown
                AllowSpin="True"
                Increment="1"
                Maximum="35"
                Minimum="2"
                NumberFormat="{Binding NumberFormatInfo}"
                ShowButtonSpinner="False"
                Value="{Binding InputNumericSystem}" />
        </StackPanel>

        <StackPanel
            Grid.Column="2"
            Orientation="Vertical"
            Spacing="10">
            <TextBlock Text="Second number" />
            <TextBox Text="{Binding Result}" />

            <TextBlock Text="Numeric system of second number (2-35)" />
            <NumericUpDown
                AllowSpin="True"
                Increment="1"
                Maximum="35"
                Minimum="2"
                NumberFormat="{Binding NumberFormatInfo}"
                ShowButtonSpinner="False"
                Value="{Binding ResultNumericSystem}" />
        </StackPanel>
    </Grid>
</Window>